<?xml version="1.0" encoding="utf-8"?>
<resources>



    // font style
    <style name="Style_bold_font">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="Style_medium_font">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="Style_regular_font">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/regular</item>
    </style>




    <!--    search input field theme-->
    <style name="StyleInputField" parent="@style/Style_medium_font">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>




    <!--    bottomSheet corner round style-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_corner</item>
    </style>



    <!--    Style for Ripple circle effect-->
    <style name="Style_RippleEffect">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--    Style for normal ripple effect -->
    <style name="Style_NormalRippleEffect">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>



    <!--    Input text Field -->

    <style name="Style_TextTextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="startIconTint">@null</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/color_theme_100</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="style_editText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/bold</item>
        <item name="hintTextColor">@color/color_theme_100</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_input_field</item>
    </style>




    <style name="Style_ProfileButtons">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_gray_8</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>




<!--    Activity transaction-->
    <style name="MyCustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/anim_slide_in_right
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/anim_slide_out_left
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/anim_slide_in_left
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/anim_slide_out_right
        </item>
    </style>




    <!--  dialog style-->
    <style name="DialogBounceAnimation">
        <item name="android:windowEnterAnimation">@anim/animation_bounce</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FullScreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>



</resources>